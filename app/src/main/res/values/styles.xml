<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:colorEdgeEffect">@color/colorPrimaryDark</item>
    <item name="android:statusBarColor">@color/colorPrimaryDark</item>

    <item name="android:windowSoftInputMode">adjustResize</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    <item name="android:textColor">@color/textDefault</item>
    <item name="android:textSize">@dimen/text_size_m</item>
    <item name="android:fontFamily">@font/ubuntu_regular</item>
    <item name="android:textAllCaps">false</item>

    </style>

    <!--    ScreenTitle styles start   -->
    <style name="ScreenTitle">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="ButtonRoundSolid" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:maxWidth">400dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cornerRadius">22dp</item>
    </style>

    <style name="ButtonBottom">
        <item name="android:layout_width">@dimen/button_bottom_width</item>
        <item name="android:layout_height">@dimen/button_bottom_height</item>
        <item name="android:layout_margin">@dimen/spacing_l</item>
        <item name="android:stateListAnimator">@animator/elevate</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:elevation">@dimen/elevation_medium</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonBottom.Gradient" parent="ButtonBottom">
        <item name="android:background">@drawable/selector_button_bottom_gradient</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>